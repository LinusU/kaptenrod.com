
quite-large-text()
  color #333
  margin 10px
  padding 10px
  font-size 14pt
  line-height 170%

html
  overflow-y scroll

html, body, figure, figcaption, figure img
  padding 0
  margin 0

body
  background #eee
  font-family 'Helvetica Neue', sans-serif
  font-size 10pt
  counter-reset section

a
  outline none
  cursor pointer
  text-decoration none

a:hover
  text-decoration underline

a img
  border none

main
  width 800px
  display block
  margin 0px auto
  // background white
  // box-shadow 0 0 2px black
  // box-shadow 0 0 12px -2px black

header
  height 250px
  position relative
  background-image url(img/silhouette.png), url(img/tile.png)
  background-repeat no-repeat, repeat
  background-position right bottom, center center
  box-shadow 0 0 2px black
  h1
    top 40px
    left 20px
    width 200px
    position absolute
    color white
    margin 0
    text-align center
    text-transform uppercase
    font-size 64pt
    font-weight normal
    text-shadow 0 0 4px black
  h1:first-line
    font-size 32pt
    font-weight bold

nav
  overflow hidden
  text-align center
  text-transform lowercase
  background white
  a
    padding 12px 32px
    display inline-block
    color black
  a:hover
    color #d22
    text-decoration none

.text
  padding 2em 1em
  background white
  box-shadow 0 0 2px black
  margin-bottom 96px
  p
    quite-large-text()

.quote
  padding 1em
  padding-bottom 0
  p::before
    content '“'
    color #999
    font-size 96pt
    position absolute
    left 40px
    top 20px
  p
    position relative
    font-size 32pt
    padding 24px 32px 0
    text-align center
    color #333

.media
  section
    padding 40px 0
    // box-shadow inset 0 0 2px black
  h1
    text-align center
    background white
    margin 0
    padding 1em
    box-shadow 0 0 2px black
    position relative
  h1::before
    position absolute
    top 1px
    left -128px
    width 82px
    height 82px
    line-height 82px
    counter-increment section
    content counter(section)
    border-radius 100%
    color #333
    background #ccc
    font-size 32pt
    text-align center
  img
    float left
    margin 10px
    margin-top 20px
    margin-right 30px
    height 192px
    box-shadow 0 0 2px black
  p
    quite-large-text()
  p.read-more
    text-align right
    font-size 11pt
    a
      color #999
    a::after
      content ' ⇝'

.media.chariots-of-the-gods
  p
    font-size 12pt
    line-height 150%


footer
  clear both
  text-align center
  padding 12px 0
  color #999
  a
    color inherit
  .sep
    padding 0 12px
